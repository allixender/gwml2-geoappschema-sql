<?xml version="1.0" encoding="UTF-8"?>
<as:AppSchemaDataAccess xmlns:as="http://www.geotools.org/app-schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.geotools.org/app-schema AppSchemaDataAccess.xsd">
	<namespaces>
		<Namespace><prefix>gml</prefix><uri>http://www.opengis.net/gml/3.2</uri></Namespace>
		<Namespace><prefix>om</prefix><uri>http://www.opengis.net/om/2.0</uri></Namespace>
		<Namespace><prefix>sams</prefix><uri>http://www.opengis.net/samplingSpatial/2.0</uri></Namespace>
		<Namespace><prefix>sam</prefix><uri>http://www.opengis.net/sampling/2.0</uri></Namespace>
		<Namespace><prefix>gmd</prefix><uri>http://www.isotc211.org/2005/gmd</uri></Namespace>
		<Namespace><prefix>gwml2</prefix><uri>http://www.opengis.net/gwml-main/2.1</uri></Namespace>
		<Namespace><prefix>gwml2w</prefix><uri>http://www.opengis.net/gwml-well/2.1</uri></Namespace>
		<Namespace><prefix>swe</prefix><uri>http://www.opengis.net/swe/2.0</uri></Namespace>
		<Namespace><prefix>gsml</prefix><uri>http://xmlns.geosciml.org/GeoSciML-Core/3.2</uri></Namespace>
		<Namespace><prefix>gwml2wc</prefix><uri>http://www.opengis.net/gwml-wellconstruction/2.1</uri></Namespace>
		<Namespace><prefix>gsmlgu</prefix><uri>http://xmlns.geosciml.org/GeologicUnit/3.2</uri></Namespace>
		<Namespace><prefix>gsmlem</prefix><uri>http://xmlns.geosciml.org/EarthMaterial/3.2</uri></Namespace>
		<Namespace><prefix>gwml2c</prefix><uri>http://www.opengis.net/gwml-constituent/2.1</uri></Namespace>
		<Namespace><prefix>xlink</prefix><uri>http://www.w3.org/1999/xlink</uri></Namespace>
		<Namespace><prefix>xsi</prefix><uri>http://www.w3.org/2001/XMLSchema-instance</uri></Namespace>
	</namespaces>
	<includedTypes>
		<Include>GW_GeologyLog_mapping.xml</Include>
	</includedTypes>
	<sourceDataStores>
		<DataStore>
			<id>shapefile</id>
			<parameters>
				<Parameter>
					<name>url</name>
					<value>file:/home/geoserver/geo-app-schema-complex-ws/shared-data/soe-monitoring-wells/soe-monitoring-wells.shp</value>
				</Parameter>
				<Parameter>
					<name>memory mapped buffer</name>
					<value>false</value>
				</Parameter>
				<Parameter>
					<name>create spatial index</name>
					<value>true</value>
				</Parameter>
				<Parameter>
					<name>charset</name>
					<value>ISO-8859-1</value>
				</Parameter>
			</parameters>
		</DataStore>
    <!--
    <DataStore>
      <id>datastore</id>
      <parameters>
          <Parameter>
              <name>dbtype</name>
              <value>postgisng</value>
          </Parameter>
          <Parameter>
              <name>jndiReferenceName</name>
              <value>${gwml2.jndi}</value>
          </Parameter>
      </parameters>
  </DataStore>
  -->
	</sourceDataStores>
	<targetTypes>
		<FeatureType>
		  <schemaUri>http://ngwd-bdnes.cits.nrcan.gc.ca/service/gwml/schemas/2.1/gwml2-main.xsd</schemaUri>
		  <schemaUri>http://ngwd-bdnes.cits.nrcan.gc.ca/service/gwml/schemas/2.1/gwml2-well.xsd</schemaUri>
		  <schemaUri>http://ngwd-bdnes.cits.nrcan.gc.ca/service/gwml/schemas/2.1/gwml2-wellconstruction.xsd</schemaUri>
		  <schemaUri>http://schemas.geosciml.org/geosciml-core/3.2/geosciml-core.xsd</schemaUri>
		  <schemaUri>http://schemas.geosciml.org/geologicunit/3.2/geologicUnit.xsd</schemaUri>
		  <schemaUri>http://schemas.geosciml.org/earthmaterial/3.2/earthMaterial.xsd</schemaUri>
		  <schemaUri>http://schemas.opengis.net/gml/3.2.1/gml.xsd</schemaUri>
		  <schemaUri>http://schemas.opengis.net/om/2.0/observation.xsd</schemaUri>
		</FeatureType>
	</targetTypes>
	<typeMappings>
		<FeatureTypeMapping>
			<sourceDataStore>shapefile</sourceDataStore>
			<sourceType>soe-monitoring-wells</sourceType>
			<targetElement>gwml2w:GW_Well</targetElement>
			<attributeMappings>
				<AttributeMapping>
					<targetAttribute>gwml2w:GW_Well</targetAttribute>
					<idExpression><OCQL>strConcat('soe.well.', ID)</OCQL></idExpression>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gml:identifier</targetAttribute>
					<ClientProperty><name>codeSpace</name><value>'${gns.codespace}'</value></ClientProperty>
					<sourceExpression><OCQL>strConcat('${vocab.uriprefix}/soe/well/', ID)</OCQL></sourceExpression>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gml:name</targetAttribute>
					<ClientProperty><name>codeSpace</name><value>'${gns.codespace}'</value></ClientProperty>
					<sourceExpression><OCQL>Name</OCQL></sourceExpression>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellTotalLength/swe:Quantity/swe:uom</targetAttribute>
					<ClientProperty><name>xlink:href</name><value>'http://qudt.org/vocab/unit#Meter'</value></ClientProperty>
					<ClientProperty><name>xlink:title</name><value>'metre'</value></ClientProperty>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellTotalLength/swe:Quantity/swe:value</targetAttribute>
					<sourceExpression><OCQL>Depth</OCQL></sourceExpression>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellReferenceElevation/gwml2w:Elevation/gwml2w:elevation</targetAttribute>
					<ClientProperty><name>srsName</name><value>strConcat('${uri.crs}', '4440')</value></ClientProperty>
					<ClientProperty><name>srsDimension</name><value>'1'</value></ClientProperty>
					<ClientProperty><name>uomLabels</name><value>'m NZVD2009'</value></ClientProperty>
					<sourceExpression><OCQL>Elevation</OCQL></sourceExpression>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellReferenceElevation/gwml2w:Elevation/gwml2w:elevationAccuracy</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'unknown'</value></ClientProperty>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellReferenceElevation/gwml2w:Elevation/gwml2w:elevationAccuracy</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'unknown'</value></ClientProperty>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellReferenceElevation/gwml2w:Elevation/gwml2w:elevationType</targetAttribute>
					<ClientProperty><name>xlink:href</name><value>'http://somevocab.org/gwml/2.0/notes'</value></ClientProperty>
					<ClientProperty><name>xlink:title</name><value>'Relative Level Natural Surface'</value></ClientProperty>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellReferenceElevation/gwml2w:Elevation/gwml2w:elevationMeasurementMethod</targetAttribute>
					<ClientProperty><name>xlink:href</name><value>'http://somevocab.org/gwml/2.0/notes'</value></ClientProperty>
					<ClientProperty><name>xlink:title</name><value>'MeasuredInSitu'</value></ClientProperty>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellStatus</targetAttribute>
					<ClientProperty><name>xlink:href</name><value>'http://somevocab.org/gwml/2.0/notes'</value></ClientProperty>
					<ClientProperty><name>xlink:title</name><value>'standby'</value></ClientProperty>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellWaterUse</targetAttribute>
					<ClientProperty><name>xlink:href</name><value>'http://somevocab.org/gwml/2.0/notes'</value></ClientProperty>
					<ClientProperty><name>xlink:title</name><value>'monitoring'</value></ClientProperty>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellBody</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'unknown'</value></ClientProperty>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellYield</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'unknown'</value></ClientProperty>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellConstructedDepth</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'unknown'</value></ClientProperty>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellLicence</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'withheld'</value></ClientProperty>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellUnit</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'unknown'</value></ClientProperty>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellConstruction</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'unknown'</value></ClientProperty>
				</AttributeMapping>
				<!--
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellGeology</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'missing'</value></ClientProperty>
				</AttributeMapping>
				-->
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellGeology</targetAttribute>
					<sourceExpression>
						<OCQL>ID</OCQL>
						<linkElement>_gwml2w_GW_GeologyLog</linkElement>
						<linkField>FEATURE_LINK</linkField>
					</sourceExpression>
					<isMultiple>false</isMultiple>
				</AttributeMapping>
				<!--
				<AttributeMapping>
					<targetAttribute>sam:relatedObservation</targetAttribute>
					<sourceExpression>
						<OCQL>strConcat('${vocab.uriprefix}/feature/', feature_pu)</OCQL>
						<linkElement>_om_OM_Observation</linkElement>
						<linkField>FEATURE_LINK</linkField>
					</sourceExpression>
					<isMultiple>true</isMultiple>
				</AttributeMapping>
				-->
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellContributionZone</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'unknown'</value></ClientProperty>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellStaticWaterDepth</targetAttribute>
					<ClientProperty><name>xsi:nil</name><value>'true'</value></ClientProperty>
					<ClientProperty><name>nilReason</name><value>'withheld'</value></ClientProperty>
				</AttributeMapping>
				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellPurpose</targetAttribute>
					<ClientProperty><name>xlink:href</name><value>'http://somevocab.org/gwml/2.0/notes'</value></ClientProperty>
					<ClientProperty><name>xlink:title</name><value>'Monitoring'</value></ClientProperty>
				</AttributeMapping>

				<AttributeMapping>
					<targetAttribute>gwml2w:gwWellLocation</targetAttribute>
					<!-- <targetAttribute>sams:shape</targetAttribute> -->
					<ClientProperty><name>srsName</name><value>strConcat('${uri.crs}', '4326')</value></ClientProperty>
					<!--=== Geoserver should have automagically detected that the geometry was a point, but didn't - hence explicit ===
                        === sams:shape/gml:Point target. May be something awry with my PostGIS 2.0 set-up (?).                      ===-->
					<idExpression><OCQL>strConcat('loc.mon.', ID)</OCQL></idExpression>
					<sourceExpression><OCQL>the_geom</OCQL></sourceExpression>
				</AttributeMapping>

			</attributeMappings>
		</FeatureTypeMapping>
	</typeMappings>
</as:AppSchemaDataAccess>
